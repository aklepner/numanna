<?xml version="1.0"?>
<config>
    <sections>
        <mediaappearance translate="label comment" module="mediaappearance">
            <tab>fmebase</tab>
            <label>Media Configuration</label>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>   
            
                <general translate="label comment" module="mediaappearance">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>14</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                        <fields>
                            <enablemedia translate="label">
                                <label>Enable/Disable Media Gallery</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_enabledisable</source_model>
                                <sort_order>7</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </enablemedia>
                            <videooptions translate="label">
                                <label>Play Video On Product Page In</label>
                                <frontend_type>select</frontend_type>
                                <source_model>mediaappearance/system_config_source_videooptions</source_model>
                                <sort_order>8</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </videooptions>
                        </fields>
                </general>
                <list translate="label comment" module="mediaappearance">
                    <label>Media List</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        
                        
                        <page_title translate="label">
                            <label>Page Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </page_title>
                        <identifier translate="label">
                            <label>SEF URL Identifier</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>(eg: domain.com/identifier)</comment>
                        </identifier>
                        <items_per_page translate="label">
                            <label>Media per page</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Number of media per page (0 for no limit)</comment>
                        </items_per_page>
                        <meta_keywords translate="label">
                            <label>META Keywords</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </meta_keywords>
                        <meta_description translate="label">
                            <label>META Description</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </meta_description>
                    </fields>
                </list>
                <popupsettings translate="label comment" module="mediaappearance">
                    <label>Video Popup Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>16</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <width translate="label">
                            <label>Popup Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </width>
                        <height translate="label">
                            <label>Popup Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </height>
                        <autoplay translate="label">
                            <label>Auto Play Video</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </autoplay>
                    </fields>
               </popupsettings>
                <featuredblock translate="label comment" module="mediaappearance">
                    <label>Featured Videos Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>17</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                        <fields>
                            <title translate="label">
                                <label>Featured videos title</label>
                                <frontend_type>text</frontend_type>
                                <comment></comment>
                                <sort_order>10</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </title>
                        </fields>
                </featuredblock>            
                <videosblock translate="label comment" module="mediaappearance">
                    <label>Videos Block Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>18</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                        <fields>
                            <title translate="label">
                                <label>Videos block title</label>
                                <frontend_type>text</frontend_type>
                                <comment></comment>
                                <sort_order>10</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </title>
                            <left translate="label">
                                <label>Enable in left column</label>
                                <frontend_type>select</frontend_type>
                                <source_model>mediaappearance/system_config_source_columns</source_model>
                                <sort_order>12</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </left>
                            <right translate="label">
                                <label>Enable in right column</label>
                                <frontend_type>select</frontend_type>
                                <source_model>mediaappearance/system_config_source_columns</source_model>
                                <sort_order>14</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </right>
                        </fields>
                </videosblock>
                <images translate="label">
                    <label>Media Page Image Options</label>
                    <sort_order>19</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <fields>
                        <width translate="label comment">
                            <label>Image Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </width>
                        <height translate="label comment">
                            <label>Image Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </height>
                        <note translate="label">
                            <comment>Image Width and Height must be Propotional</comment>
                            <frontend_type>label</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </note>
                    </fields>
                </images>
                <seo translate="label comment" module="mediaappearance">
                    <label>Search Engine Optimizations</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <url_suffix translate="label">
                            <label>URL Suffix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>(eg: .html)</comment>
                        </url_suffix>
                    </fields>
               </seo>
               <ajaxloader translate="label comment" module="mediaappearance">
                <label>Ajax Loader Image for Media Page</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <fme_media_img translate="label">
                            <label>Image to Display On Cart Page</label>
                            <comment>This  loader  is  display On Scroll Pagination</comment>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">mediaappearance</upload_dir>
                            <base_url type="media" scope_info="1">mediaappearance</base_url>
                            <sort_order>96</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fme_media_img>
                    </fields>

               </ajaxloader>
               
               
            </groups>
        </mediaappearance>
    </sections>
</config>